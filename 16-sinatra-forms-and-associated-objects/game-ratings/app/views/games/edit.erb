<h1>Edit a new game!</h1>

<form action="/games/<%= @game.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <div class="input-wrapper">
    <label for="title">Title:</label>
    <input type="text" name="game[title]" id="title" value="<%= @game.title%>">
  </div>

  <div class="input-wrapper">
    <label for="description">Description:</label>
    <textarea type="text" name="game[description]" id="description"><%= @game.description%></textarea>
  </div>

  <div class="input-wrapper">
    <label for="image_url">Image URL:</label>
    <input type="text" name="game[image_url]" id="image_url" value="<%= @game.image_url%>">
  </div>

  <div class="input-wrapper">
    <label for="rating">Rating:</label>
    <input type="number" name="game[rating]" id="rating" max="5" min="0" value="<%= @game.rating%>">
  </div>

  <input type="submit" class="button">
</form>